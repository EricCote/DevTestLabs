{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newLabName": {
      "type": "string",
      "metadata": {
        "description": "The name of the new lab instance to be created"
      }
    },
    "timeZone":  {
      "type": "string",
      "defaultValue": "Eastern Standard Time",
      "metadata": {
        "description": "The name of the time zone"
      }
    },
    "reclamationTime": {
      "type": "string",
      "defaultValue": "1800",
      "metadata": {
        "description": "The time when a machine will be reclaimed to unclaimed status"
      }
    },
    "shutdownTime": {
      "type": "string",
      "defaultValue": "1715",
      "metadata": {
        "description": "The time when a machine will be shutdown"
      }
    },
    "startupTime": {
      "type": "string",
      "defaultValue": "0745",
      "metadata": {
        "description": "The time when a machine will be started up"
      }
    
    },
    
  },
  "variables": {
    "labVirtualNetworkName": "[concat('Dtl', parameters('newLabName'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-05-15",
      "type": "Microsoft.DevTestLab/labs",
      "name": "[parameters('newLabName')]",
      "location": "[resourceGroup().location]",

      "properties": {
          "labStorageType":"Standard"
      },
      "resources": [
        {
          "apiVersion": "2016-05-15",
          "name": "[variables('labVirtualNetworkName')]",
          "type": "virtualNetworks",
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', parameters('newLabName'))]"
          ]
        },
  //      {          
  //          "type": "microsoft.devtestlab/labs/artifactsources",
  //          "name": "[concat(parameters('newLabName'),'/privaterepo')]",
  //          "apiVersion": "2016-05-15",
  //          "properties": {
  //              "displayName": "Private Repo",
  //              "uri": "https://github.com/EricCote/DevTestLabs.git",
  //              "sourceType": "GitHub",
  //              "folderPath": "/Artifacts",
  //              "branchRef": "master",
  //              "status": "Enabled",
  //              "securityToken": "33f57ea3fd055b91705ce92adb1626a388e49202"
  //          },
  //          "dependsOn": [
  //              "[resourceId('microsoft.devtestlab/labs', parameters('newLabName'))]"
  //          ]
  //      },
            {
            "type": "microsoft.devtestlab/labs/schedules",
            "name": "[concat(parameters('newLabName'),'/LabVmsShutdown')]",
            "apiVersion": "2016-05-15",
            "properties": {
                "status": "Enabled",
                "taskType": "LabVmsShutdownTask",
                "dailyRecurrence": {
                    "time": "[parameters('shutdownTime')]"
                },
                "timeZoneId": "[parameters('timeZone')]"
            },
            "dependsOn": [
                "[resourceId('microsoft.devtestlab/labs', parameters('newLabName'))]"
            ]
        },
        {
            "type": "microsoft.devtestlab/labs/schedules",
            "name": "[concat(parameters('newLabName'),'/labvmreclamation')]",
            "apiVersion": "2016-05-15",
            "properties": {
                "status": "Enabled",
                "taskType": "LabVmReclamationTask",
                "dailyRecurrence": {
                    "time": "[parameters('reclamationTime')]"
                },
                "timeZoneId": "[parameters('timeZone')]"
            },
            "dependsOn": [
                "[resourceId('microsoft.devtestlab/labs', parameters('newLabName'))]"
            ]
        },
        {
            "type": "microsoft.devtestlab/labs/schedules",
            "name": "[concat(parameters('newLabName'),'/labvmautostart')]",
            "apiVersion": "2016-05-15",
            "properties": {
                "status": "Enabled",
                "taskType": "LabVmsStartupTask",
                "weeklyRecurrence": {
                    "weekdays": [
                        "Monday",
                        "Tuesday",
                        "Wednesday",
                        "Thursday",
                        "Friday"
                    ],
                    "time": "[parameters('startupTime')]"
                },
                "timeZoneId": "[parameters('timeZone')]"
            },
            "dependsOn": [
                "[resourceId('microsoft.devtestlab/labs', parameters('newLabName'))]"
            ]
        }
      ]
    }
  ],
  "outputs": {
    "labId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DevTestLab/labs', parameters('newLabName'))]"
    }
  }
}