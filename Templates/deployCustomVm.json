{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newVMName": {
      "type": "string"
    },
    "labName": {
      "type": "string"
    },
    "customImage": {
      "type": "string",
      "metadata": {
        "description": "The name of an existing custom image which will be used to create the new vm. The specified image must exist in the lab (identified via the 'existingLabName' parameter)."
      }
    },
    "numberOfInstances": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 2,
      "metadata": {
        "description": "Number of VM instances to be created."
      }
    },
    "size": {
      "type": "string",
      "defaultValue": "Standard_DS2_v2"
    },
    "userName": {
      "type": "string"
    },
    "password": {
      "type": "securestring"
    },
    "expirationDate": {
      "type": "string"
    }
  },
  "variables": {
    "labVirtualNetworkName": "[concat('Dtl', parameters('labName'))]",
    "labSubnetName": "[concat(variables('labVirtualNetworkName'), 'Subnet')]",
    "labVirtualNetworkId": "[resourceId('Microsoft.DevTestLab/labs/virtualnetworks', parameters('labName'), variables('labVirtualNetworkName'))]",
    "vmId": "[resourceId ('Microsoft.DevTestLab/labs/virtualmachines', parameters('labName'), parameters('newVMName'))]",
    "vmName": "[concat(parameters('labName'), '/', parameters('newVMName'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-05-15",
      "type": "Microsoft.DevTestLab/labs/virtualmachines",
      "name": "[concat(variables('vmName'),padLeft(copyIndex(), 2, '0'))]",
      "location": "[resourceGroup().location]",
      "tags": {

        "AutoStartOn": "true"

      },
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "properties": {
        "labVirtualNetworkId": "[variables('labVirtualNetworkId')]",
        "notes": "Windows 10 Enterprise N",
        "customImageId":  "[resourceId('Microsoft.DevTestLab/labs/customimages', parameters('labName'), parameters('customImage'))]",
        "size": "[parameters('size')]",
        "userName": "[parameters('userName')]",
        "password": "[parameters('password')]",
        "isAuthenticationWithSshKey": false,
       // "artifacts": [
       //   {
       //     "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('labName'), 'public repo', 'windows-chrome')]"
       //   }
       // ],
        "labSubnetName": "[variables('labSubnetName')]",
        "disallowPublicIpAddress": false,
        "storageType": "Standard",
        "allowClaim": true,
        "expirationDate": "[parameters('expirationDate')]"
      }
    }
  ],
  "outputs": {
    "labVMId": {
      "type": "string",
      "value": "[variables('vmId')]"
    }
  }
}