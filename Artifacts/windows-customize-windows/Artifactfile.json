{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "Customize Windows",
  "description": "Does abunch of stuff",
  "publisher": "Eric Côté",
  "tags": ["Windows"],
  "iconUri": "https://github.com/EricCote/DevTestLabs/raw/master/Images/windows11.svg",
  "targetOsType": "Windows",
  "parameters": {
    "RoundedCorners": {
      "type": "bool",
      "displayName": "Rounded Corners",
      "description": "Force Windows 11 to use rounded corners even when there is no graphic card",
      "defaultValue": false
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass \"./Customize-Windows.ps1   -RoundedCorners:$', parameters('RoundedCorners'),  ' \"')]"
  }
}
