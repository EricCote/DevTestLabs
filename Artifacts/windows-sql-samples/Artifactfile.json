{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
    "title": "SQL Samples",
    "description": "Installs Sql Server Sample Databases.",
    "publisher": "Eric Côté",
    "tags": [
        "Sample Databases",
        "Northwind",
        "Adventure Works",
        "World Wide Importers"
    ],
    "iconUri": "https://github.com/EricCote/DevTestLabs/raw/master/Images/db-samples.png",
    "parameters": {
        "adventureWorks2014": {
            "type": "bool",
            "displayName": "Adventure Works 2014",
            "description": "Installs Adventure Works 2014."
        },
         "adventureWorksDW2014": {
            "type": "bool",
            "displayName": "Adventure Works DW 2014",
            "description": "Installs Adventure Works Data Warehouse 2014."
        },
         "worldWideImports": {
            "type": "bool",
            "displayName": "WorldWide Imports",
            "description": "Installs World Wide Importers."
        }
    },
    "targetOsType": "Windows",
    "runCommand": {
        "commandToExecute": "[concat('powershell.exe -executionPolicy bypass -file install-samples.ps1  -adventureWorks2014 $' , parameters('adventureWorks2014'), ' -adventureWorksDW2014 $', parameters('adventureWorksDW2014'), ' -worldWideImports $', parameters('worldWideImports'))]"
        //  "commandToExecute": "powershell.exe -ExecutionPolicy bypass -File Install-Database.ps1"
    }
}